<div class="item-container">
  <div class="create-item">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1>Aggiungi un panino</h1>
          <%= simple_form_for @item do |f| %>
            <%= f.input :name %>
            <%= f.input :price %>
            <%= f.association :category, include_hidden: false %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <%= f.input :remote_photo_url %>
            <%= f.button :submit, id: "ctrl-button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>